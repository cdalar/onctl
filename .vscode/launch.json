    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "env": {
                "ONCTL_LOG": "DEBUG",
                "ONCTL_CLOUD": "azure"
            },
            "args": ["ls"], 
            "cwd": "${workspaceRoot}", 
            "showLog": true
        },
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "env": {
                "ONCTL_LOG": "DEBUG",
                "ONCTL_CLOUD": "azure"
            },
            "args": ["up", "-i", "wireguard/vpn.sh"], 
            "cwd": "${workspaceRoot}", 
            "showLog": true
        }
    ]
}